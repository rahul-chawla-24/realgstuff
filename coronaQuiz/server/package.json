{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "client" : "cd ../client && npm start",
    "start": "nodemon ./bin/www",
    "dev": "concurrently -n 'server,client' -c 'red,green' \"nodemon ./bin/www\" \"npm run client\"",
