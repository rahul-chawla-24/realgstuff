                  <a class="nav-link" href="/consumer/offers">Offers<sup class="text-warning"><b>NEW</b></sup></a>
               </li>
               {{else}}
               <li class="nav-item mx-2">
                  <a class="nav-link" href="/offers">Offers<sup class="text-warning"><b>NEW</b></sup></a>
               </li>
               {{/if}}
               {{#if user}}
               <li class="nav-item mx-2">
                  <div class="d-flex">
                     <div class="dropdown mr-1">
                        <a class="nav-link dropdown-toggle" id="dropdownMenuOffset" data-toggle="dropdown"
