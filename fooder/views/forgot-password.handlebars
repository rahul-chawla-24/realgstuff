<div class="container-fluid">
    <div class="row">
        <div class="col-md-1 mt-3">
            <a href="/" class="nav-link text-warning h3" alt="GO BACK"><i class="fa fa-chevron-left"
                    aria-hidden="true"></i>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mx-auto mt-5">
            <div class="card shadow-sm p-3 mb-5 bg-white rounded">
                <div class="card-body">
                    <h4 class="card-title">Forgot Password</h4>
                    <form action="forgotPassword" method="POST">
                        <div class="form-group">
                            <label for="userId">Email</label>
                            <input type="email" id="userId" name="email" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-warning">SUBMIT</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{#if error}}
    <div class="row">
        <div class="col-md-6 mx-auto mt-4">
            <div class="alert alert-{{error.errorType}} alert-dismissible fade show" role="alert">
                <strong>{{error.errorFocus}}</strong> {{error.errorMsg}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
    {{/if}}