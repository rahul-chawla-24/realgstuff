<div id="registerModal" class="modal fade right" role="dialog" aria-labelledby="registerTitle" aria-hidden="true"
    tabindex="-1" style="height: fit-content;">
    <div class="modal-dialog" role="document">
        <!-- Modal content-->
        <div class="modal-content" style="min-height: 100vh;">
            <div class="modal-header">
                <h4 class="modal-title" id="registerTitle">Register</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form action="/register" method="post" style="width: 100%;">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <button class="btn btn-outline-secondary" type="button">Role Type</button>
                        </div>
                        <select class="custom-select" id="inputGroupSelect03"
                            aria-label="Example select with button addon" name="roleType" required>
                            <option value="" selected>Choose...</option>
                            <option value="consumer">Consumer</option>
                            <option value="restaurant_owner">Restaurant Owner</option>
                            <option value="delivery_guy">Delivery Guy</option>
                        </select>
                    </div>
                    <label for="mobile_no">Mobile number</label> <br>
                    <input type="number" name="mobile_no" id="reg_mobile_no" class="form-control" required> <br>
                    <label for="name">Name</label> <br>
                    <input type="text" name="name" id="name" class="form-control" required> <br>
                    <label for="email">Email</label> <br>
                    <input type="email" name="email" id="email" class="form-control" required> <br>
                    <label for="password">Password</label> <br>
                    <input type="password" name="password" id="password" class="form-control" required> <br>
                    <button type="submit" class="btn btn-lg btn-warning" style="width: 100%;">Register</button> <br>
                    <br>
                    <p>By creating an account, <span class="text-info">I accept the Terms & Conditions</span></p>
                </form>
            </div>
            {{!-- footer ends here. --}}
        </div>
        {{!-- Model content ends here. --}}
    </div>
    {{!-- Model  dialog ends here. --}}
</div>
