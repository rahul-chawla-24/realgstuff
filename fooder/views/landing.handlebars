<div id="loginModal" class="modal fade right" role="dialog" aria-labelledby="loginTitle" aria-hidden="true"
    tabindex="-1" style="height: fit-content;">
    <div class="modal-dialog" role="document">
        <!-- Login Modal content-->
        <div class="modal-content" style="min-height: 100vh;">
            <div class="modal-header">
                <h4 class="modal-title" id="loginTitle">Login</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">

                <form action="/login" method="post" style="width: 100%;">
                    <div class="form-group">
                        <label for="user_id">Mobile / Email</label> <br>
                        <input type="text" name="user_id" id="user_id" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" class="form-control" required>
                    </div>
                    <a href="/forgotPassword" class="nav-link p-0 mb-2 mt-1">Forgot Password?</a>
                    <button type="submit" class="btn btn-lg btn-warning" style="width: 100%;">Login</button>
                    <br>
                    <br>
                </form>
            </div>
            {{!--Login Modal footer ends here. --}}
        </div>
        {{!--Login Model content ends here. --}}
    </div>
    {{!--Login  Model  dialog ends here. --}}
</div>
{{!--Login  Model ends here. --}}

